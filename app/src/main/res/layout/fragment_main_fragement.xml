<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="ourteam.gradproject.com.first_end_virsion_gp.Fragments.MainFragement">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:id="@+id/instructions_text"
        android:background="@drawable/redius_white_shape"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:text="برجاء اتباع التعليمات الاتيه"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="1- الرجاء التأكد من الجلوس في مكان يحتوي علي اضائه واضحه"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text=" 2- قم بخلع النظاره اذا كنت ترتديها"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:layout_marginRight="5dp"

            android:layout_gravity="right"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="3- قم بتنفيذ الطلبات فور طلبها"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"

            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="4- اذا واجهتك مشكله فقم بالضغط علي الزرار لاعاده العمليه"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="5- يمكنك تكرار العمليه 3 مرات فقط"
            android:layout_marginBottom="8dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"

            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_below="@+id/instructions_text"
        android:id="@+id/start_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/redius_white_black_shape"
        android:fontFamily="@font/main_font"
        android:text="أبدأ الطلب"
        android:textColor="@android:color/white"
        android:textScaleX="2" />
</RelativeLayout>
